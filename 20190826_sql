alter table core_databaselist add dbrole tinyint not null default 1 comment '0 主库，1 从库';

# ---20190827  新增工作流表
CREATE TABLE `workflow_config` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `create_time` varchar(20) DEFAULT NULL,
  `update_time` varchar(20) DEFAULT NULL,
  `name` varchar(50) DEFAULT NULL comment '工作流名称',
  `step_num` varchar(100) DEFAULT NULL comment '工作流节点编号',
  `step_name` varchar(100) DEFAULT NULL comment '工作流节点名称',
  `handler_role` varchar(4000) DEFAULT NULL comment '处理人角色',
  PRIMARY KEY (`id`),
  unique key uk_workflow_config_name(name)
) ENGINE=InnoDB AUTO_INCREMENT=22 DEFAULT CHARSET=utf8mb4;


CREATE TABLE `workflow_record` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `create_time` varchar(20) DEFAULT NULL,
  `work_id` varchar(50) DEFAULT NULL comment '单号',
  `workflow_name` varchar(50) DEFAULT NULL comment '工作流名称',
   step_num varchar(100) DEFAULT NULL comment '工作流节点编号',
  `step_name` varchar(50) DEFAULT NULL comment '工作流节点名称',
  `handler_user` varchar(30) DEFAULT NULL comment '处理人',
  `handler_result` varchar(10) comment '处理结果：通过，驳回，转交',
  `opinion` varchar(10) comment '处理意见',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=22 DEFAULT CHARSET=utf8mb4;

